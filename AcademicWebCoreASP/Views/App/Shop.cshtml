@model IEnumerable<Product>

@section css_styles{
    <link rel="stylesheet" type="text/css" href="~/css/styleShop.css" />
}

<section>
    <h1>@ViewBag.Title</h1>
    <p>Count: @Model.Count()</p>
    @foreach (var p in Model)
    {
        <li>@p.BeerName</li>
    }

    <div class="row" id="products-row">
        @foreach (var p in Model)
        {
            <div class="col-md-3" id="product-container">

                <div>
                    <div class="col-md-4" style="float:left;">
                        <img class="img-thumbnail" id="product-img" src="~/_img/beers/@(p.PhotoId).png" alt="@p.BeerName" />
                    </div>
                    <div class="col-md-8" style="float: right;">
                        <h3>@p.BeerName</h3>
                        <h5 style="font-style:italic">by  @p.Producer</h5>
                        <ul class="product-props">
                            <li>Name: @p.BeerName</li>
                            <li>Producer: @p.Producer</li>
                            <li>Category: @p.BeerCategory</li>
                            <li>Description: @p.Description</li>
                            <li>Price: @p.Price</li>
                        </ul>
                        <button id="buyButon" class="btn btn-success">Buy</button>
                    </div>
                </div>

            </div>
        }
    </div>
</section>
